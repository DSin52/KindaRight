
<!-- <!DOCTYPE html> -->
<html>
  <head>
    <title>KindaRight</title>
    
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/new_bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/shapes.css">
    
    <style>
      

      body {
        /*position: absolute;
        top: 0;
        bottom: 0;*/

        background: url('/images/bg.jpg') fixed;
        margin: 0 auto;
        border: 0;
        padding: 0;
        background-size: 100%;
        
      }
      .content-area {
        position: absolute;
        top: 50px;
        bottom: 0;
      }
      .mask {
        position: relative;
        height: 100%;
        min-height: 100%;
        background: url("/images/mask.png") bottom;
        background-size: 100%;

        -webkit-transition: top 1s linear;
        /*-webkit-transition: background 1s linear;*/
      }

      #intro {
        background: url("/images/intro.jpg") no-repeat center;
        background-size: 100% 100%;
        top: 0%;
      }
      #one {
        background: url("/images/mask.png") bottom center;
        background-size: 100% 100%;
        border: #000 solid 50px;
      }

      #two {
        background: url("/images/slide2.png") center;
        background-size: 100%;
      }
      #three {
        background: url("/images/slide3.png") center;
        background-size: 100%;
      }
    </style>

    <% include includes/head_common.ejs %>
  </head>
  <body>
  

  <!-- NavBar Object -->
  <nav class="navbar navbar-inverse" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"></button>
      <a class="navbar-brand" id="title" href="http://localhost:3000"><img src="images/nav_logo.png">&nbsp<logo>KindaRight</logo></a>
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapse-1">
      <form class="navbar-form navbar-right" id="login" method="POST" action="/main">
        <div class="form-group">
          <input type="email" class="form-control" name="Email" placeholder="Email" id="user">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" name="Password" placeholder="Password" id="pass">
        </div>
        <button type="submit" class="btn btn-primary" id="loginButton">Log In</button>
        <!-- <button type="submit" class="btn btn-info" data-toggle="modal" data-target="#forgotModal" id="forgotButton">Forgot Password</button> -->
        <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#createModal" id="createButton">Create Account</button>
      </form>
    </div>
  </nav>
  <!-- End NavBar Object -->

  <!-- Forgot Modal -->
  <div class="modal fade" id="forgotModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Forgot Password</h4>
        </div>
        <div class="modal-body" id="modal-forgot">
          <p id="forgot-text">Please Enter email address to reset your password</p>
          <form class="navbar-form" id="forgot">
            <div class="form-group">
              <input type="email" class="form-control" placeholder="Email" id="forgotEmailAddress">
            </div>
            <button type="submit" class="btn btn-primary" id="forgotEmail">Send Email</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <!-- End Forgot Modal -->

   <!-- Create Modal -->
  <div class="modal fade" id="createModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Enter Account Information</h4>
        </div>
        <div class="modal-body" id="modal-create">
          <form class="form-horizontal" id="create" method="POST" action="/create" enctype="multipart/form-data">
            <div class="form-group">
              <label for="createFirstName" class="col-lg-3 control-label">First Name:</label>
              <div class="col-lg-8">
                <input type="text" class="form-control" name="First_Name" placeholder="e.g. Bob" id="createFirstName">
              </div>
            </div>
            <div class="form-group">
              <label for="createLastName" class="col-lg-3 control-label">Last Name:</label>
              <div class="col-lg-8">
                <input type="text" class="form-control" name="Last_Name" placeholder="e.g. Smith" id="createLastName">
              </div>
            </div>
            <div class="form-group">
              <label for="createUsername" class="col-lg-3 control-label">Username:</label>
              <div class="col-lg-8">
                <input type="text" class="form-control" name="Username" placeholder="Enter Username" id="createUsername">
              </div>
            </div>
            <div class="form-group">
              <label for="createEmailAddress" class="col-lg-3 control-label">Email Address:</label>
              <div class="col-lg-8">
                <input type="email" class="form-control" name="Email" placeholder="Enter Email" id="createEmailAddress">
              </div>
            </div>
            <div class="form-group">
              <label for="verifyEmailAddress" class="col-lg-3 control-label">Re-Enter Email:</label>
              <div class="col-lg-8"> 
                <input type="email" class="form-control" placeholder="Re-Enter Email" id="verifyEmailAddress">
              </div>
            </div>
            <div class="form-group">
              <label for="accountPassword" class="col-lg-3 control-label">Password:</label>
              <div class="col-lg-8">
                <input type="password" class="form-control" name="Password" placeholder="Enter Password" id="createPassword">
              </div>
            </div>
            <div class="form-group">
              <label for="verifyAccountPassword" class="col-lg-3 control-label">Password:</label>
              <div class="col-lg-8">
                <input type="password" class="form-control" placeholder="Re-Enter Password" id="verifyPassword">
              </div>
            </div>
            <div class="form-group">
              <label for="createPicture" class="col-lg-3 control-label">Picture:</label>
              <div class="col-lg-8">
                <input type="file" class="form-control" name="picture" id="createPicture">
              </div>
            </div>
            <div class="form-group">
              <label for="discipline" class="col-lg-3 control-label">Discipline:</label>
              <div class="col-lg-8">
                <input type="text" class="form-control" name="discipline" placeholder="e.g. Photographer" id="discipline">
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success" id="createAccountButton">Create Account</button>
          <button type="button" class="btn btn-info" id="cancel" data-dismiss="modal">Cancel</button>
        </div>
      </div>c
    </div>
  </div>
  <!-- End Create Modal -->
  
  <div class="mask" id="intro"></div>
  <div class="mask" id="one"></div>
  <div class="mask" id="two"></div>
  <div class="mask" id="three"></div>


  <div class="footer">
    <p class="fine-print center-text">
      Copyright 2014 KindaRight
    </p>
  </div>  

  


  
  <!-- Script References -->
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>
  <script src="ui.custom/js/jquery-ui-1.10.4.custom.min.js"></script>
  <script type="text/javascript" src="/javascripts/func.js"></script>
  
  <!-- End Script References -->

  </body>
</html>